<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Playland Dashboard</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700" rel="stylesheet">

    @Html.Partial("~/Views/Shared/_WebMasterCssCommon.cshtml")
    @Html.Partial("~/Views/Shared/_WebMasterJsCommon.cshtml")
</head>
<body>


    @Html.Partial("~/Views/Shared/_AjaxDefaultLoaderPartial.cshtml")
    <div class="bg-homepage">

        <div class="container">
            <header>
                <div class="row clearfix">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="logo"><img src="~/images/logo.png" alt=""></div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="login">
                            <div class="dropdown show">
                                <img src="~/images/avatar.png" alt=""> <a class="carrot-style" href="" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@ViewBag.SessionUser.Username</a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" onclick="window.location.href = '@Url.Action("Logout","Home")'" style="cursor:pointer">
                                    <a class="dropdown-item" href="@Url.Action("Logout","Home")">Çıkış</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </div>

        @RenderBody()
    </div>
</body>
</html>
